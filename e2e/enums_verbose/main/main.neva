component Main(start any) (stop any) {
    nodes { DayPrinter }
    net {
        :start -> (Day::Friday -> dayPrinter:day)
        dayPrinter:sig -> :stop
    }
}

type Day enum {
    Monday,
    Tuesday,
    Wednesday,
    Thursday,
    Friday,
    Saturday,
    Sunday
}

component DayPrinter(day Day) (sig) {
    nodes { Println }
    net {
        :day -> println:data
        println:sig -> :sig
    }
}