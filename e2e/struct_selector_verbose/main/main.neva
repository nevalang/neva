// Here we learn how to read struct field
// by using builtin component with compiler directive.

type User struct {
    name string
    pet Pet
}

type Pet struct {
    name string
}

const user User = {
    name: 'John',
    pet: { name: 'Charley' }
}

const path list<string> = ['pet', 'name']

component Main(start any) (stop any) {
    nodes {
        Println

        #bind(path)
        Field
    }

    :start -> ($user -> field:msg)
    field:msg -> println:data
    println:sig -> :stop
}
