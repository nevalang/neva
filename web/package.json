{
  "name": "vscode-nevalang",
  "displayName": "Neva",
  "main": "out/extension.js",
  "author": {
    "email": "emil.musician@gmail.com",
    "name": "Emil Valeev",
    "url": "https://github.com/emil14"
  },
  "description": "VSCode extension for Nevalang - flow based programming language.",
  "publisher": "nevalang",
  "version": "0.2.0",
  "license": "MIT",
  "engines": {
    "vscode": "^1.78.0"
  },
  "bugs": {
    "url": "https://github.com/nevalang/neva/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nevalang/neva"
  },
  "keywords": [
    "neva",
    "nevalang",
    "neva language",
    "extension",
    "intellisense",
    "autocompletion",
    "syntax-highlighting",
    "visual editor",
    "visual programming",
    "visual langauge",
    "fbp",
    "flow based programming",
    "dataflow",
    "dataflow programming"
  ],
  "categories": [
    "Programming Languages",
    "Visualization",
    "Debuggers",
    "Formatters",
    "Linters",
    "Snippets",
    "Testing",
    "Other"
  ],
  "contributes": {
    "languages": [
      {
        "id": "neva",
        "aliases": [
          "Neva",
          "nevalang",
          "Nevalang",
          "NevaLang"
        ],
        "extensions": [
          ".neva"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./assets/file-icon.svg",
          "dark": "./assets/file-icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "neva",
        "scopeName": "source.neva",
        "path": "./syntaxes/neva.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "neva.openPreview",
        "title": "Preview ðŸ‘€",
        "category": "Neva"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "editorLangId == neva",
          "command": "neva.openPreview",
          "group": "navigation"
        }
      ]
    }
  },
  "activationEvents": [
    "workspaceContains:neva.yml",
    "workspaceContains:neva.yaml"
  ],
  "icon": "assets/logo.png",
  "dependencies": {
    "@vscode/codicons": "^0.0.33",
    "vscode": "^1.1.37",
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^16.18.34",
    "@types/vscode": "^1.73.0",
    "@types/vscode-webview": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.26.0",
    "forever": "^4.0.3",
    "js-yaml": "^4.1.0",
    "nodemon": "^2.0.22",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "yaml2json": "js-yaml syntaxes/neva.tmLanguage.yml > syntaxes/neva.tmLanguage.json",
    "watch-yaml2json": "nodemon --delay 1 --watch syntaxes/neva.tmLanguage.yml --exec npm run yaml2json",
    "ts": "rm -rf out && tsc --p ./",
    "watch-ts": "tsc -w -p ./",
    "build-webview": "cd webview && rm -rf dist && npm run build && cp -r ./node_modules/@vscode/codicons/dist ./dist/codicons",
    "watch-webview": "nodemon --watch ./webview/src --exec npm run build-webview || exit 1",
    "watch": "concurrently 'npm run watch-yaml2json' 'npm run watch-ts' 'npm run watch-webview'"
  },
  "nodemonConfig": {
    "ext": "js,json,hbs,html,ts,tsx,yml,yaml",
    "events": {
      "start": "cls || clear"
    },
    "delay": 1000,
    "ignore": [
      "**/dist/**"
    ]
  }
}
