{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "RUN",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/neva",
      "cwd": "${workspaceFolder}/e2e/errors_lift",
      "args": ["run", "--trace", "main"]
    },
    {
      "name": "DEBUG CODEGEN",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/examples/dist/main.go",
      "cwd": "${workspaceFolder}/examples"
    },
    {
      "name": "BUILD",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/neva",
      "cwd": "${workspaceFolder}/examples",
      "args": ["build", "-target=go", "-output=../dist", "hello_world"]
    },
    {
      "name": "GET",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/neva",
      "cwd": "${workspaceFolder}/examples",
      "args": ["get", "github.com/nevalang/x"]
    },
    {
      "name": "LSP",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/lsp",
      "cwd": "${workspaceFolder}",
      "args": ["-debug"]
    },
    {
      "name": "ANTLR",
      "type": "antlr-debug",
      "request": "launch",
      // "input": "${workspaceFolder}/internal/compiler/parser/smoke_test/happypath/024_const.mixed.neva",
      "input": "${workspaceFolder}/examples/image_png/main.neva",
      "grammar": "${workspaceFolder}/internal/compiler/parser/neva.g4",
      "startRule": "prog",
      "printParseTree": true,
      "visualParseTree": true
    }
  ]
}
